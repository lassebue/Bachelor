<Window x:Class="DataOpsamlingTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:DataOpsamlingTest"
        xmlns:model="clr-namespace:EmgDataModel;assembly=EmgDataModel"
        Title="MainWindow" Height="374" Width="523"
        >

    <Window.Resources>
        <model:EmgDataSet x:Key="dataSet" Hand="1" Orientation="15" EmgDataFile="-"></model:EmgDataSet>
        <model:Pose x:Key="buller"></model:Pose>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <ListBox 
                 Margin="0,34,10,76" Name="MyList"
                    IsSynchronizedWithCurrentItem="True" ItemsSource="{Binding}" HorizontalAlignment="Right" Width="144"/>
        <Button Content="Record EMG Data" Margin="361,297,10,26"/>
        <Button Content="Check Orientation" Margin="361,272,10,51"/>
        <Button Content="_Save Data" Name="SaveDataBtn" Margin="10,297,361,26"/>
        <Menu Height="29" VerticalAlignment="Top" IsMainMenu="True">
            <MenuItem Header="_File" VerticalAlignment="Center" ></MenuItem>
        </Menu>
        <StatusBar Margin="0,322,0,0"/>
        <Button Content="_Delete Data" Margin="159,297,212,26"/>
    </Grid>
</Window>
