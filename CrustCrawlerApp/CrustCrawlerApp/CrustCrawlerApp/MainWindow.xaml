<Window x:Class="CrustCrawlerApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CrustCrawlerApp.WindControl"

        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Button Content="Check Orientation" Command="{Binding CheckOrientationCommandHandler}"
                DataContext="{DynamicResource mainVm}" HorizontalAlignment="Left"
                Margin="151,108,0,0" VerticalAlignment="Top"
                Height="25" Width="100"/>
        <Label Content="{Binding Orientation}" DataContext="{DynamicResource mainVm}"
               HorizontalAlignment="Left" Margin="151,77,0,0" VerticalAlignment="Top"/>
        <Button Content="Open Claw" Command="{Binding}"
                DataContext="{DynamicResource mainVm}" Height="25" Width="100"
                Margin="407,10,10,284"/>
        <Button Content="Close Claw" Height="25" Width="100" Margin="407,40,10,254"/>
    </Grid>
</Window>
